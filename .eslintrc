{
  "parser": "babel-eslint",
  "env": {
    "browser": true,
    "node": true,
    "es6": true,
    "jest/globals": true
  },
  "parserOptions": {
    "ecmaVersion": 7,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "plugins": [
    "react",
    "jest"
  ],
  "extends": ["eslint:recommended", "plugin:react/recommended"],
  "rules": {
    "no-multiple-empty-lines": ["error", { "max": 2 }],   
    "no-console": 1
  },
  "settings": {
    "react": {
      "pragma": "React",
      "version": "16.12.0"
    }
  }
}